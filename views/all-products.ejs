<h1>
    Viewing all products
</h1>

<% if (Object.keys(products).length===0) { %>
    No products found. <a href="/new">Add new</a>
<% } %>

<% products.forEach(function(product){ %>
    <div>
        <a class="product-code" href="/view-product/<%=product.product_code%>">
            <span id="productCode"><%= product.product_code %></span>
        </a>
        <span class="prod-name"><%= product.name %></span>
        <button class="delete-button" id="<%= product.id %>">
            <img src="/icons/bin.png" alt="" style="width: 10px; height: 10px;">
        </button>
    </div>

<% }); %>